<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/structureImgBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/structureCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="structureCost"
        app:layout_constraintBottom_toTopOf="@id/structureImgBttn"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/structureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/structureImgBttn"
        android:text="structureType"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:padding="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>